@model GameWebApp.Models.Game

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .inputWrap {
        min-width:500px;
    }
</style>
 
<h2>Добавление игры</h2>
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <p>
        <label asp-for="Walkthrough">Прохождение</label><br />
        <input type="text" asp-for="Walkthrough" class="inputWrap" />
    </p>
    <p>
        <label asp-for="F2">F2</label><br />
        <input type="text" asp-for="F2" class="inputWrap" />
    </p>
    <p>
        <label asp-for="GameTitle">Название игры</label><br />
        <input type="text" asp-for="GameTitle" class="inputWrap" />
    </p>
    <p>
        <label asp-for="Release">Релиз</label><br />
        <input type="text" asp-for="Release" class="inputWrap" />
    </p>
    <p>
        <label asp-for="Platform">Платформа</label><br />
        <input type="text" asp-for="Platform" class="inputWrap" />
    </p>
    <p>
        <label asp-for="Rating">Оценка</label><br />
        <input type="text" asp-for="Rating" class="inputWrap" />
    </p>
    <p>
        <input type="submit" value="Сохранить" />
    </p>
</form>